<h1>Callbacks</h1>
<script src="js/callbacks.js" defer></script>
<style>
    .timer-item {
        transition: all 0.3s ease;
    }

    .timer-item.expired {
        animation: flash 1s infinite;
    }

    @keyframes flash {

        0%,
        50% {
            background-color: #ff6b6b;
            color: white;
        }

        51%,
        100% {
            background-color: transparent;
            color: inherit;
        }
    }

    .countdown {
        font-family: 'Courier New', monospace;
        font-weight: bold;
    }

    .custom-time-input {
        display: none;
    }

    .custom-time-input.active {
        display: block;
    }
</style>
<div class="timer-container">

    <form class="ui form" id="timerForm">
        <div class="fields">
            <div class="four wide field">
                <label>Reference Number</label>
                <input type="text" id="refNumber" placeholder="Enter reference number" required>
            </div>
            <div class="four wide field">
                <label>Callback Time</label>
                <select class="ui dropdown" id="callbackTime">
                    <option value="5">5 minutes</option>
                    <option value="10">10 minutes</option>
                    <option value="60">1 hour</option>
                    <option value="custom">Custom</option>
                </select>
            </div>
        </div>
        <div class="field custom-time-input" id="customTimeField">
            <label>Custom Time</label>
            <div class="three fields">
                <div class="field">
                    <label>Hours</label>
                    <input type="number" id="customHours" placeholder="0" min="0" value="0">
                </div>
                <div class="field">
                    <label>Minutes</label>
                    <input type="number" id="customMinutes" placeholder="0" min="0" value="0">
                </div>
                <div class="field">
                    <label>Seconds</label>
                    <input type="number" id="customSeconds" placeholder="0" min="0" value="0">
                </div>
            </div>
        </div>
        <button class="ui primary button" type="submit">Add Timer</button>
    </form>

        <h3 class="ui header">Active Timers</h3>
        <div class="ui mini relaxed list" id="timerList">
            <div class="item" style="text-align: center; color: #999;">
                No active timers
            </div>
        </div>
</div>